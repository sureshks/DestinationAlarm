<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/toolBarLightColor</item>
        <item name="colorPrimaryDark">@color/toolBarColor</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="ActionBarPopupThemeOverlay" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/toolBarLightColor</item>
        <item name="colorPrimaryDark">@color/toolBarLightColor</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:background">@color/toolBarLightColor</item>
    </style>

</resources>
